# LokiSoft Environment Configuration
# Copy this file to .env.local and fill in your values

# ===================
# Required for Contact Form
# ===================

# Resend API key for sending emails (get one at https://resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Email address to receive contact form submissions
CONTACT_EMAIL=contact@yourdomain.com

# Your verified domain in Resend (for sending emails)
RESEND_DOMAIN=yourdomain.com

# ===================
# Site Configuration
# ===================

# Your site's public URL (used for security headers and image validation)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Site name (shown in emails and meta tags)
NEXT_PUBLIC_SITE_NAME=LokiSoft

# GitHub repository URL
NEXT_PUBLIC_GITHUB_REPO_URL=https://github.com/yourusername/yourrepo

# ===================
# Image Domain Allowlist
# ===================

# Comma-separated list of allowed external image domains
# These domains are allowed in addition to your NEXT_PUBLIC_SITE_URL
# Leave empty to only allow images from your own domain
ALLOWED_IMAGE_DOMAINS=images.unsplash.com,cdn.example.com

# ===================
# Optional: Analytics & Integrations
# ===================

# Giscus (GitHub Discussions) configuration for blog comments
NEXT_PUBLIC_GISCUS_REPO=yourusername/yourrepo
NEXT_PUBLIC_GISCUS_REPO_ID=your_repo_id
NEXT_PUBLIC_GISCUS_CATEGORY=Blog Comments
NEXT_PUBLIC_GISCUS_CATEGORY_ID=your_category_id
